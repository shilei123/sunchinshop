<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sqhl.shop.mapper.CategoryMapper">
  <resultMap id="BaseResultMap" type="cn.sqhl.shop.vo.CateGory">
    <id column="ID" jdbcType="VARCHAR" property="id" />
    <result column="CATE_NAME" jdbcType="VARCHAR" property="cateName" />
    <result column="REMARK" jdbcType="VARCHAR" property="remark" />
    <result column="ORDER_" jdbcType="DECIMAL" property="order" />
    <result column="LEVEL_" jdbcType="CHAR" property="level" />
    <result column="LOGO" jdbcType="VARCHAR" property="logo" />
    <result column="URL" jdbcType="VARCHAR" property="url" />
    <result column="ISUSE" jdbcType="CHAR" property="isuse" />
    <result column="PARENT_ID" jdbcType="VARCHAR" property="parentId" />
    <result column="CATE_CODE" jdbcType="VARCHAR" property="cateCode" />
    <result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime" typeHandler="cn.sqhl.shop.core.DateTypeHandler"/>
    <result column="UPDATE_TIME" jdbcType="TIMESTAMP" property="updateTime" typeHandler="cn.sqhl.shop.core.DateTypeHandler"/>
    <result column="FLAG" jdbcType="CHAR" property="flag" />
    <result column="ISBRAND" jdbcType="CHAR" property="isbrand" />
  </resultMap>
  <sql id="Base_Column_List">
    ID, CATE_NAME, REMARK, ORDER_, LEVEL_, LOGO, URL, ISUSE, PARENT_ID, CATE_CODE, CREATE_TIME, 
    UPDATE_TIME, FLAG, ISBRAND
  </sql>
  <select id="selectList" parameterType="java.util.Map" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from SC_CATEGORY
    where isuse='1' and flag='1'
    <if test="map.parent_id != null" >
    	and PARENT_ID=#{map.parent_id,jdbcType=VARCHAR}
    </if>
    <if test="map.level != null" >
    	and LEVELS=#{map.level,jdbcType=VARCHAR}
    </if>
    order by CATE_ORDER desc
  </select>
</mapper>